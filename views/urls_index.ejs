<html lang="en">
  <head>
    <%- include('partials/_head') %>
    <link rel="stylesheet" href="../public/css/stylesheet.css">
    <title>My URLS</title>
  </head>
<body>
  <%- include('partials/_navbar') %>
  <main>
    <% if (JSON.stringify(urls) === '{}') { %> 
      <div class="title create-url">
        <h3>No URLs Yet!</h3>
        <a href="/urls_new"><button>Create New URL</button></a>
      </div>
    <% } else { %> 
      <div class="title">
        <table>
          <thead>
            <tr>
              <th>TINYurl</th>
              <th>Destination URL</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% for(let url in urls) { %>
              <tr>
                <td><%= url %></td>
                <td><%= urls[url] %></td>
                <td><a href="/urls/<%= url %>"><button type="edit" class="btn-table">Edit</button></td>
                <td><form method="POST" action="/urls/<%= url %>/delete?_method=DELETE">
                  <button type="delete" class="btn-delete btn-table">Delete</button>
                </form>
              </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      <% } %> 
      </div>
  </main>
</body>
</html>